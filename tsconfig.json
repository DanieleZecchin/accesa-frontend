{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strict": true,
        "module": "amd",
        "noEmitOnError": true,
        //"outFile": "js/bundle.js",
        "outDir": "js",
        "watch": true,
        "rootDir": "ts",
        "target": "es5",
        "lib": [
            //"es2015.promise",
            "dom",
            "es6"
        ]
    },

    "include": [
        "ts/**/*"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}